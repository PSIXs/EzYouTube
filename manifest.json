{
  "manifest_version": 2,

  "name": "EzYouTube",
  "description": "YouTube age restriction bypass",
  "version": "0.9.0",

  "page_action": {
    "default_popup": "popup.html",
    "default_title": "EzYouTube"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts":[
    {
      "matches": [ "*://*.youtube.com/*" ],
      "js": ["content.js", "jquery-3.1.0.min.js"],
      "css" : ["style.css"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["*://youtube.com/*",
    "*://www.youtube.com/*", "tabs", "storage"]
}